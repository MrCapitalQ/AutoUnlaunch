<?xml version="1.0" encoding="utf-8"?>
<winuiex:WindowEx x:Class="MrCapitalQ.AutoUnlaunch.MainWindow"
                  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                  xmlns:local="using:MrCapitalQ.AutoUnlaunch"
                  xmlns:winuiex="using:WinUIEx"
                  xmlns:controls="using:MrCapitalQ.AutoUnlaunch.Controls"
                  xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                  xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                  mc:Ignorable="d"
                  TaskBarIcon="Assets/AppIcon.ico"
                  Width="600"
                  Height="800"
                  MinWidth="400"
                  MinHeight="300">
    <Window.SystemBackdrop>
        <MicaBackdrop />
    </Window.SystemBackdrop>

    <Grid HorizontalAlignment="Stretch"
          VerticalAlignment="Stretch">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <controls:TitleBar x:Name="TitleBar"
                           Icon="{x:Bind Icon}"
                           Title="{x:Bind Title}"
                           Window="{x:Bind}" />
        <Button x:Name="myButton"
                HorizontalAlignment="Center"
                Grid.Row="1"
                Click="myButton_Click">Click Me</Button>
    </Grid>
</winuiex:WindowEx>
